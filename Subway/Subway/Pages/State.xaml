<Window x:Class="Subway.Pages.State"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subway.Pages"
        mc:Ignorable="d"
        Title="State" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="datagrid" Background="AliceBlue" Grid.Row="0">
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="CadetBlue">
            <Label Margin="100 5 0 5" FontSize="15" Content="请输入你的票："/>
            <TextBox x:Name="ticketId" Width="25" Height="25"/>
            <Button Click="ensure_click" Background="CadetBlue" Margin="50,7,0,7"  Width="50" Height="25" Content="确定"/>
        </StackPanel>
    </Grid>
</Window>
